{
  "version": 2,
  "functions": {
    "api/**/*.py": {
      "maxDuration": 10,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/products",
      "destination": "/api/products.py"
    },
    {
      "source": "/api/products/:path*",
      "destination": "/api/products.py"
    },
    {
      "source": "/api/acceptance-rules",
      "destination": "/api/acceptance-rules.py"
    },
    {
      "source": "/api/acceptance-rules/:path*",
      "destination": "/api/acceptance-rules.py"
    },
    {
      "source": "/((?!api/)(?!.*\\..*).*)",
      "destination": "/index.html"
    }
  ]
}
